<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cl1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCalculate"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:ellipsize="start"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:ellipsize="start"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:text="C"
                app:cornerRadius="20dp"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnOpenBracket"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="("
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnCloseBracket"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text=")"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/cl3"
                android:src="@drawable/ic_arrowback_foreground"
                android:scaleType="centerCrop"
                app:cornerRadius="100dp"
                android:padding="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="/"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="4"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:cornerRadius="20dp"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:cornerRadius="20dp"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                app:cornerRadius="20dp"
                android:text="-"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">





            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:cornerRadius="20dp"
                android:text="."
                android:textSize="25sp" />
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="0"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cl3"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="20dp"
                android:text="+"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/navy"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:text="="
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>